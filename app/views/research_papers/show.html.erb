<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @research_paper.name %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @research_paper.topic %>
</p>

<p>
  <strong>Date:</strong>
  <%= @research_paper.date %>
</p>

<p>
  <strong>Conference:</strong>
  <%= @research_paper.conference %>
</p>
<h2>Contributors</h2>
<% @paper_writers = PaperWriterMapping.where(paper_id: @research_paper.id) %>
<% @paper_writers.each do |paper_writer|%>
    <% @user = User.find_by(id: paper_writer.writer_id) %>
    <b><%= @user.name %></b>
    <br>
<% end %>
